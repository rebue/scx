		<artifactId>sb-parent</artifactId>
		<version>1.2.4</version>
	</parent>

	<groupId>com.github.rebue.scx</groupId>
	<artifactId>dcs</artifactId>
	<packaging>pom</packaging>
	<description>数据采集与分享(Data Collect And Share)微服务</description>

	<modules>
		<module>dcs-gen</module>
		<module>dcs-api</module>
		<module>dcs-svr</module>
